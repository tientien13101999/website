    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script>
        document.getElementById('course1').onclick = function (){
            $(document).ready(function () {
                var DATA
	fetch("Reports.json")
	.then(function(response){
		return response.json();
	})
	.then(function(products){
		DATA = products
		render(0)
	});

	function render(week){
		let placeholder = document.querySelector("#dataoutput");
		$(".heading-section").html(`Tuần ${week+1} - Cấu trúc dữ liệu và giải thuật`)
		let out = "";
		if(DATA){
			for(let product of DATA){
				out += `
					<tr>
						<td>${product.STT}</td>
						<td>${product.Name}</td>
						<td>KHMT 16-01</td>
						<td>${product.Emailaddress}</td>
						<td>${product.Monhoc.MonCTDLGT.tuan.time[week]}</td>
						<td><a href="#" class="btn btn-warning">InCompleted</a></td>
					</tr>
				`;
			}

			placeholder.innerHTML = out;
		}
		
	}

		$('#week1').on("click", (e) => {
			e.preventDefault()
			render(0)
		})
		$('#week2').on("click", (e) => {
			e.preventDefault()
			render(1)
		})
		$('#week3').on("click", (e) => {
			e.preventDefault()
			render(2)
		})
		$('#week4').on("click", (e) => {
			e.preventDefault()
			render(3)
		})
		$('#week5').on("click", (e) => {
			e.preventDefault()
			render(4)
		})
		$('#week6').on("click", (e) => {
			e.preventDefault()
			render(5)
		})
		$('#week7').on("click", (e) => {
			e.preventDefault()
			render(6)
		})
    $('#myTable').DataTable();
});
        }
    $(document).ready(function () {
    $('#myTable').DataTable();
});

    </script>
